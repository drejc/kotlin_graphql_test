schema {
    query: Query
}

scalar DateOnly

type Query {
    all : [Card]
    card(id: String) : Card!
    flat(id: String) : CardDto!
}

type Card {
    number: String
    expires: DateOnly
    holder: CardHolder
}

type CardHolder {
    name: String
    surName: String
}

type CardDto {
    number: String
    expires: DateOnly
    firstName: String
    lastName: String
}

